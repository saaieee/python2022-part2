BoxLayout:
    orientation: 'horizontal'

    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 0.5
        Label:
            text: 'Sort by:'
        Spinner:
            id: values_to_sort
            text: app.current_value
            values: app.categories
            on_text: app.sort_songs(self.text.title())
        Label:
            size_hint_y: 1.5
            text: 'Add New Song...'
        Label:
            text: 'Title:'
        TextInput:
            text: ''
            id: title_input
        Label:
            text: 'Artist:'
        TextInput:
            text: ''
            id: artist_input
        Label:
            text: 'Year:'
        TextInput:
            text: ''
            id: year_input
        Button:
            text: 'Add Song'
            on_press: app.add_song()
        Button:
            text: 'Clear'
            on_press: app.clear_all()

    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            id: status_text
        BoxLayout:
            id: entries_box
            orientation: 'vertical'
        Label:
            size_hint_y: 0.1
            id: output_label